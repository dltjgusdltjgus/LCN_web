<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- MariaDB DataSource 설정: 현재 사용하지 않는다면 주석 처리하거나 제거합니다. -->
    <!-- JNDI를 통해 DB 연결을 관리할 때 사용됩니다. -->
    <!--
    <resource-ref>
        <description>MariaDB DataSource</description>
        <res-ref-name>jdbc/mydb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    -->

    <!-- login.jsp 서블릿 정의는 유지합니다. -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>

    <!--
        **** 중요: login.jsp에 대한 루트 URL (/) 매핑을 제거합니다. ****
        **** 이 매핑이 있으면 index.html 대신 login.jsp가 첫 페이지로 뜹니다. ****
    -->
    <!--
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    -->

    <!-- login.jsp를 /login 경로로 매핑합니다. -->
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- register.jsp 서블릿 정의 (register.jsp가 직접 서블릿처럼 동작하는 경우) -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <!-- 정적 파일 매핑: Tomcat의 DefaultServlet이 자동으로 처리하지만, 명시적으로 추가하는 것을 권장합니다. -->
    <!-- 특히 특정 경로의 정적 파일이 로드되지 않을 때 유용합니다. -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</label>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/dist/js/*</url-pattern>
    </servlet-mapping>
    <!-- 필요한 경우 다른 정적 리소스 경로도 추가합니다. -->


    <!-- **** 웹 애플리케이션의 시작 페이지를 index.html로 설정합니다. **** -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>

